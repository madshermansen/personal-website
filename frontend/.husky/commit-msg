#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Get the commit message
commit_msg=$(cat "$1")

# Conventional commit pattern
pattern="^(feat|fix|docs|style|refactor|perf|test|chore|ci|build|revert)(\(.+\))?: .{1,100}"

if ! echo "$commit_msg" | grep -qE "$pattern"; then
  echo "❌ Invalid commit message format!"
  echo ""
  echo "Commit message must follow Conventional Commits format:"
  echo "  <type>(<scope>): <subject>"
  echo ""
  echo "Examples:"
  echo "  feat: add dark mode toggle"
  echo "  fix(auth): resolve login redirect issue"
  echo "  docs: update README with testing instructions"
  echo ""
  echo "Valid types: feat, fix, docs, style, refactor, perf, test, chore, ci, build, revert"
  echo ""
  exit 1
fi

echo "✅ Commit message format is valid"
